{
  "compilerOptions": {
    "moduleResolution": "node16",
    "target": "ES2022",
    "module": "Node18",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "outDir": "dist",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@global/*": [
        "../types/*"
      ],
      "@local/*": [
        "./types/*"
      ]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "include": [
    "types/*",
    "src/**/*",
    "index.ts",
    "../types/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}