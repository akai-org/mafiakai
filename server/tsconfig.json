{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2022",
    "module": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@global/*": [
        "../types/*"
      ],
      "@local/*": [
        "./types/*"
      ]
    }
  },
  "include": [
    "types/*",
    "src/**/*",
    "index.ts",
    "../types/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}